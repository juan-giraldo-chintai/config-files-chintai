{
  "display": "Node 16",

  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "allowUnreachableCode": false,
    
    "baseUrl": "./",
    "resolveJsonModule": true,
    "disableSizeLimit": true,
    "jsx": "preserve",

    "lib": ["dom", "DOM.Iterable", "esnext"],

  }
}